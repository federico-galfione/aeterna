{% set t = en if lang == "en" else it %}
{% set prefix = baseUrl if lang == "en" else baseUrl + "it/" %}
<!-- Footer -->
<footer class="footer">
  <div class="container">
    <div class="footer-inner">
      <div class="footer-brand">
        <div class="footer-logo">
          <img src="{{ baseUrl }}public/logos/Dark_logo.svg" alt="Aeterna Events">
        </div>
        <p class="footer-tagline">{{ t.footer.tagline }}</p>
      </div>
      <nav class="footer-nav">
        <h4>{{ t.footer.navigate }}</h4>
        <ul>
          <li><a href="{{ prefix }}corporate.html">{{ t.footer.corporateEvents }}</a></li>
          <li><a href="{{ prefix }}weddings.html">{{ t.footer.weddings }}</a></li>
          <li><a href="{{ prefix }}services.html">{{ t.footer.services }}</a></li>
          <li><a href="{{ prefix }}about.html">{{ t.footer.aboutUs }}</a></li>
          <li><a href="{{ prefix }}contact.html">{{ t.footer.contactLink }}</a></li>
        </ul>
      </nav>
      <div class="footer-contact">
        <h4>{{ t.footer.connect }}</h4>
        <a href="mailto:hello@aeternaevents.com" class="footer-email">hello@aeternaevents.com</a>
        <div class="footer-social">
          <a href="https://instagram.com/aeternaevents" aria-label="Instagram" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <rect x="2" y="2" width="20" height="20" rx="5" ry="5"/>
              <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/>
              <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/>
            </svg>
          </a>
          <a href="https://facebook.com/aeternaevents" aria-label="Facebook" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/>
            </svg>
          </a>
          <a href="https://linkedin.com/company/aeternaevents" aria-label="LinkedIn" target="_blank" rel="noopener">
            <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/>
              <rect x="2" y="9" width="4" height="12"/>
              <circle cx="4" cy="4" r="2"/>
            </svg>
          </a>
        </div>
      </div>
    </div>
    <div class="footer-bottom">
      <p>&copy; <span class="current-year">2026</span> Aeterna Events. {{ t.footer.rights }}</p>
      <div class="footer-legal">
        <a href="{{ prefix }}privacy.html">{{ t.footer.privacyPolicy }}</a>
        <a href="{{ prefix }}cookie-policy.html">{{ t.footer.cookiePolicy }}</a>
      </div>
      <p>P.IVA 00000000000</p>
    </div>
  </div>
</footer>
