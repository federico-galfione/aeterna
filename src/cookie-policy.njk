pagination:
  data: languages
  size: 1
  alias: lang
permalink: "{% if lang == 'it' %}it/{% endif %}cookie-policy.html"
layout: base.njk
pageName: "cookie-policy.html"
navbarScrolled: true
eleventyComputed:
