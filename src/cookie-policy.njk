      <div class="container">
        <div class="legal-content">
          <h1>{{ t.cookiePolicy.title }}</h1>
          <p class="last-updated">{{ t.cookiePolicy.lastUpdated }}</p>

          {{ t.cookiePolicy.content | safe }}
        </div>
      </div>
    </section>
  </main>
