  description: "{% if lang == 'it' %}{{ it.pages.cookiePolicy.description }}{% else %}{{ en.pages.cookiePolicy.description }}{% endif %}"
  canonical: "https://aeternaevents.com/{% if lang == 'it' %}it/{% endif %}cookie-policy.html"
