---
pagination:
  data: languages
  size: 1
  alias: lang
permalink: "{% if lang == 'it' %}it/{% endif %}corporate.html"
layout: base.njk
pageName: "corporate.html"
eleventyComputed:
  title: "{% if lang == 'it' %}{{ it.pages.corporate.title }}{% else %}{{ en.pages.corporate.title }}{% endif %}"
  description: "{% if lang == 'it' %}{{ it.pages.corporate.description }}{% else %}{{ en.pages.corporate.description }}{% endif %}"
  canonical: "https://aeternaevents.com/{% if lang == 'it' %}it/{% endif %}corporate.html"
  hreflangEn: "https://aeternaevents.com/corporate.html"
  hreflangIt: "https://aeternaevents.com/it/corporate.html"
  ogTitle: "{% if lang == 'it' %}{{ it.pages.corporate.ogTitle }}{% else %}{{ en.pages.corporate.ogTitle }}{% endif %}"
  ogDescription: "{% if lang == 'it' %}{{ it.pages.corporate.ogDescription }}{% else %}{{ en.pages.corporate.ogDescription }}{% endif %}"
  ogUrl: "https://aeternaevents.com/{% if lang == 'it' %}it/{% endif %}corporate.html"
  ogImage: "https://aeternaevents.com/images/og-image.jpg"
---
{% set t = en if lang == "en" else it %}
{% set prefix = "" if lang == "en" else "/it" %}

  <main>
    <!-- Hero Section -->
    <section class="hero">
      <div class="hero-bg">
        <img src="https://images.unsplash.com/photo-1540575467063-178a50c2df87?w=1920&q=80" alt="{{ t.corporate.hero.heroImgAlt }}" loading="eager">
      </div>
      <div class="hero-overlay"></div>
      <div class="hero-content">
        <span class="label hero-anim">{{ t.corporate.hero.label }}</span>
        <h1 class="hero-anim">{{ t.corporate.hero.title | safe }}</h1>
        <p class="subtitle hero-anim">{{ t.corporate.hero.subtitle }}</p>
        <a href="{{ prefix }}/contact.html" class="btn btn-ghost hero-anim">{{ t.corporate.hero.cta }}</a>
      </div>
      <div class="scroll-indicator">
        <span>{{ t.corporate.hero.scrollIndicator }}</span>
        <div class="scroll-indicator-line"></div>
      </div>
    </section>

    <!-- Problem/Solution -->
    <section class="section bg-gradient-warm">
      <div class="container">
        <div class="grid grid-asymmetric" style="align-items: center; gap: var(--space-4xl);">
          <div class="fade-in">
            <span class="label label--olive">{{ t.corporate.challenge.label }}</span>
            <h2 class="mt-md mb-lg">{{ t.corporate.challenge.title }}</h2>
            <p style="font-family: var(--font-sans); font-weight: 300; color: var(--text-secondary);">
              {{ t.corporate.challenge.text }}
            </p>
          </div>
          <div class="fade-in">
            <img src="https://images.unsplash.com/photo-1517048676732-d65bc937f952?w=800&q=80" alt="{{ t.corporate.challenge.imgAlt }}" style="border-radius: var(--radius-lg);">
          </div>
        </div>
      </div>
    </section>

    <!-- Our Approach -->
    <section class="section section--ivory">
      <div class="container container--narrow">
        <div class="section-header text-center fade-in">
          <span class="label">{{ t.corporate.approach.label }}</span>
          <h2>{{ t.corporate.approach.title }}</h2>
          <div class="gold-line"></div>
        </div>
        <p class="text-center fade-in" style="font-size: var(--text-lg); max-width: 700px; margin: 0 auto var(--space-3xl);">
          {{ t.corporate.approach.text }}
        </p>

        <div class="process-steps fade-in">
          {% for step in t.corporate.approach.steps %}
          <div class="process-step">
            <div>
              <h3>{{ step.title }}</h3>
              <p>{{ step.text }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <!-- Venue Types -->
    <section class="section">
      <div class="container">
        <div class="section-header fade-in">
          <span class="label label--olive">{{ t.corporate.venueTypes.label }}</span>
          <h2>{{ t.corporate.venueTypes.title }}</h2>
          <div class="gold-line"></div>
        </div>
        <div class="grid grid-3 stagger-children">
          {% for type in t.corporate.venueTypes.types %}
          <div class="card">
            <div class="card-image">
              {% if loop.index == 1 %}
              <img src="https://images.unsplash.com/photo-1582719478250-c89cae4dc85b?w=800&q=80" alt="{{ type.imgAlt }}" loading="lazy">
              {% elif loop.index == 2 %}
              <img src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&q=80" alt="{{ type.imgAlt }}" loading="lazy">
              {% elif loop.index == 3 %}
              <img src="https://images.unsplash.com/photo-1510812431401-41d2bd2722f3?w=800&q=80" alt="{{ type.imgAlt }}" loading="lazy">
              {% endif %}
            </div>
            <div class="card-content">
              <h3>{{ type.title }}</h3>
              <p>{{ type.text }}</p>
            </div>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <!-- Ideal For -->
    <section class="section bg-gradient-ivory">
      <div class="container container--narrow">
        <div class="section-header text-center fade-in">
          <span class="label">{{ t.corporate.idealFor.label }}</span>
          <h2>{{ t.corporate.idealFor.title }}</h2>
          <div class="gold-line"></div>
        </div>
        <div class="grid grid-2 fade-in" style="gap: var(--space-lg);">
          {% for item in t.corporate.idealFor.items %}
          <div style="padding: var(--space-lg); border-left: 2px solid var(--accent-primary);">
            <h4 style="margin-bottom: var(--space-sm);">{{ item.title }}</h4>
            <p style="font-family: var(--font-sans); font-weight: 300; color: var(--text-secondary); font-size: var(--text-sm);">{{ item.text }}</p>
          </div>
          {% endfor %}
        </div>
      </div>
    </section>

    <!-- Testimonial -->
    <section class="section section--dark bg-gradient-dark">
      <div class="container">
        <div class="testimonial fade-in">
          <p class="testimonial-quote">
            {{ t.corporate.testimonial.quote }}
          </p>
          <div class="testimonial-author">
            <strong>{{ t.corporate.testimonial.author }}</strong>
            <span>{{ t.corporate.testimonial.role }}</span>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="section bg-gradient-warm">
      <div class="container">
        <div class="cta-section fade-in">
          <span class="label">{{ t.corporate.cta.label }}</span>
          <h2>{{ t.corporate.cta.title }}</h2>
          <p>{{ t.corporate.cta.text }}</p>
          <a href="{{ prefix }}/contact.html" class="btn btn-primary btn-lg">{{ t.corporate.cta.button }}</a>
        </div>
      </div>
    </section>
  </main>
